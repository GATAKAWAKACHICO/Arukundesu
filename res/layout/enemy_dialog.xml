<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/battle_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/battle_description"
        android:layout_gravity="center"
        android:padding="5dp"/>
    <ImageView 
        android:id="@+id/fight_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/fight_1"
        android:contentDescription="@string/slime" />
    <Button 
        android:id="@+id/cheer_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheer_up"
        android:layout_gravity="center" />
</LinearLayout>
